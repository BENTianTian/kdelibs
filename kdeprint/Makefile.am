noinst_HEADERS = kmdbentry.h kmfactory.h kmjob.h kmjobmanager.h kmmanager.h kmobject.h kmprinter.h \
		 kmuimanager.h kmvirtualmanager.h driver.h driveritem.h droptionview.h \
