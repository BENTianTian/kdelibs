#
#  KDE HTML Widget -- Script to generate khtmlattrs.c and khtmlattrs.h
#  $Id$
#
open IN, "khtmlattrs.in"
  or die "Can't open in\n";
open header, ">khtmlattrs.h"
  or die "Can't open header\n";
open out, ">khtmlattrs.gperf"
  or die "Can't open out\n";

print out "%{\n/* This file is automatically generated from
#khtmlattrs.in by makeattrs, do not edit */\n/* Copyright 1999 Lars Knoll */\n#include \"khtmlattrs.h\"\n%}\n";
print out "struct attrs {\n    char *name;\n    int id;\n};\n%%\n";

print header "/* This file is automatically generated from
khtmlattrs.in by makeattrs, do not edit */\n/* Copyright 1999 Lars Knoll */\n\n#ifndef KHTML_ATTRS_H\n#define KHTML_ATTRS_H\n\n";
print header "/* 58369 == 0xE001 */\n";

$num = 0xE400;
while (<IN>) {
    chomp;
    $attr = $_;
    $num = $num + 1;
    
    $up = uc($attr);
    $up =~ s/-/_/;
    print out $attr . ", ATTR_" . $up . "\n";

    print header "#define ATTR_" . $up . " " . $num . "\n";

    }
print out "%%\n";
close out;
print header "\n#endif\n";
close header;

exec("/bin/sh", "-c", "gperf -a -L 'ANSI-C' -E -C -c -o -t -k '*' -NfindAttr -Hhash_attr -Wwordlist_attr -D -s 2 khtmlattrs.gperf > khtmlattrs.c");



