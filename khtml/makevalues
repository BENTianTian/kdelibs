#
#  KDE HTML Widget -- Script to generate kcssprop.c and kcssprop.h
#  $Id$
#
echo -e '%{\n/* This file is automatically generated from kcssvalues.in by makeprop, do not edit */\n/* Copyright 1999 W. Bastian */\n#include "kcssvalues.h"\n%}\nstruct css_value {\n    const char *name;\n    int id;\n};\n%%' > kcssvalues.gperf
cat kcssvalues.in | awk '{ do { prop = $0; gsub("-", "_"); print prop ", CSS_VAL_" toupper($0) } while (getline) }' >> kcssvalues.gperf
echo '%%' >> kcssvalues.gperf
echo -e '/* This file is automatically generated from kcssvalues.in by
#makevalues, do not edit */\n/* Copyright 1998 W. Bastian */\n\n#ifndef KCSSVALUES_H\n#define KCSSVALUES_H\n\n' > kcssvalues.h
cat kcssvalues.in | awk '{ \
i=1; \
print "#define CSS_VAL_INVALID 0"; \
print "#define CSS_VAL_MIN 1"; \
do { gsub("-", "_"); print "#define CSS_VAL_" toupper($0) " " i; i = i + 1 } while (getline); \
print ""; \
print "#define CSS_VAL_TOTAL " i \
}' >> kcssvalues.h
gperf -a -L 'ANSI-C' -E -C -c -o -t -k '*' -NfindValue -Hhash_val -Wwordlist_value -D -s 2 kcssvalues.gperf > kcssvalues.c
echo -e '#endif\n' >> kcssvalues.h
