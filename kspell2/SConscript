env.subdirs('ui tests plugins kcmspellchecking')

kspell2base_sources = """
backgroundchecker.cpp backgroundengine.cpp backgroundthread.cpp broker.cpp
client.cpp defaultdictionary.cpp filter.cpp settings.cpp
"""

kspell2baseinclude_headers = """
backgroundchecker.h broker.h defaultdictionary.h dictionary.h
filter.h settings.h
"""

includes = '#/kspell2 #/kutils '
