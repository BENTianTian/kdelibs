#!/usr/bin/make -f
# Made with the aid of debmake, by Christoph Lameter,
# based on the sample debian/rules file for GNU hello by Ian Jackson.

SHELL=/bin/sh

BUILDDIR = ./build

build: build-stamp

-include debian/debiandirs

debian/debiandirs: admin/debianrules
	perl -w admin/debianrules echodirs > debian/debiandirs

build-stamp:
	dh_testdir
	if test ! -f configure; then \
	  $(MAKE) -f admin/Makefile.common ;\
	fi
	version=`head -1 debian/changelog | sed -e "s#.*(\([^)]*\)).*#Debian Package \1#"` ;\
	./configure $(configkde) --with-distribution="$$version (`cat /etc/debian_version`)" \
	--includedir=/usr/include/kde --without-ssl

	make

	touch build-stamp

debian-clean:
	dh_testdir
	-rm -f build-stamp
	dh_clean

clean: debian-clean
	-rm -f debian/debiandirs debian/undocumented 
	if test -d CVS; then \
	  make -f admin/Makefile.common cvs-clean ;\
	fi
	-make distclean

binary-indep:	build
	dh_testdir
	dh_testroot
	dh_clean -i
	if test -f /usr/bin/qt2kdoc; then \
		(mkdir -p debian/kdelibs3-doc/usr/share/kdoc/index) ; \
		(mkdir -p debian/kdelibs3-doc/usr/share/doc/kdelibs3-doc/html/kdoc-reference) ; \
		qt2kdoc --url=/usr/share/doc/qt2.2-doc/doc/html \
		--outdir=`pwd`/debian/kdelibs3-doc/usr/share/doc/kdelibs3-doc/html/kdoc-reference \
		--compress \
		/usr/share/doc/qt2.2-doc/doc/html ; \
		makekdedoc --libdir=`pwd`/debian/kdelibs3-doc/usr/share/doc/kdelibs3-doc/html/kdoc-reference \
		--kdocopt='--skip-internal --compress' \
		--outputdir=`pwd`/debian/kdelibs3-doc/usr/share/doc/kdelibs3-doc/html ; \
	fi
	dh_installdocs -i
	dh_installchangelogs -pkdelibs3-doc ChangeLog
	dh_compress -i
	dh_fixperms -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i


binary-arch:  build
	dh_testdir
	dh_testroot
	dh_clean -a
	-rm -f debian/undocumented
	dh_installdirs
	install -d debian/tmp/usr/share/applnk
	install -d debian/tmp/etc/pam.d
	install -d debian/tmp/etc/kde2
	install -d debian/tmp/usr/share/lintian/overrides
	make DESTDIR=`pwd`/debian/tmp/ install
	-rm -f debian/tmp/usr/share/doc/kde/HTML/default
	cp debian/kdelibs3.override debian/tmp/usr/share/lintian/overrides/kdelibs3
	debianrc=debian/tmp/etc/kde2/system.kdeglobals ;\
	install -d `dirname $$debianrc` ;\
	echo "[Directories]" > $$debianrc ;\
	echo "dir_config=/etc/kde2" >> $$debianrc ;\
	echo "dir_html=/usr/share/doc/kde/HTML" >> $$debianrc ;\
	echo "dir_apps=/usr/share/applnk" >> $$debianrc ;\
	echo "dir_cgi=/usr/lib/cgi-bin" >> $$debianrc
	cp debian/tmp/etc/kde2/system.kdeglobals debian/tmp/etc/kderc
	perl -w admin/debianrules cleanup
	cp debian/kde.pamd debian/tmp/etc/pam.d/kde
	for i in `find debian/tmp/usr/bin | sed -e 's#^debian/tmp/usr/bin/##'  | grep -v "debian/tmp"`; do \
	  echo "$$i.1" >> debian/undocumented ; \
	done
	for i in `cat debian/undocumented.in | grep -v "#"`; do \
	  echo "$$i.1" >> debian/undocumented ; \
	done
	dh_installdocs -a
	dh_undocumented
	dh_movefiles -a
	-rm -rf debian/tmp/usr/share/apps/kssl
	mv debian/tmp/usr/lib/kde2/kio_https.so debian/tmp/usr/lib/kde2/kio_https-nossl.so
	mv debian/tmp/usr/lib/kde2/kio_https.la debian/tmp/usr/lib/kde2/kio_https-nossl.la
	mv debian/tmp/usr/lib/libkssl.so.2.0.0 debian/tmp/usr/lib/libkssl-nossl.so.2.0.0
	mv debian/tmp/usr/lib/libkssl.la debian/tmp/usr/lib/libkssl-nossl.la
	dh_installchangelogs -a ChangeLog
	dh_strip -a
	for i in `find debian/ -type l -name "common"`; do \
		rm $$i; \
		ln -s ../common $$i ;\
	done
	dh_perl -a
	dh_link -a
	dh_compress -a
	dh_fixperms -a
	chmod 644 debian/tmp/etc/pam.d/kde debian/tmp/usr/share/lintian/overrides/*
	chmod 4755 debian/libarts/usr/bin/artswrapper
	dh_suidregister -plibarts usr/bin/artswrapper
	dh_makeshlibs -a -V
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol 
	cd debian/tmp && find ./etc -type f -print | sed -e 's#^./#/#' > DEBIAN/conffiles
	chmod 644 debian/tmp/DEBIAN/conffiles
	dh_md5sums 
	dh_builddeb -a

# Below here is fairly generic really

binary:		binary-indep binary-arch

.PHONY: binary binary-arch clean
