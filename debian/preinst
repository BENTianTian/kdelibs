#! /bin/sh
# preinst script for kdelibs
#
# see: dh_installdeb(1)

set -e

case "$1" in
    install|upgrade)
      if [ -d /usr/share/applnk ]; then
        if [ -d /etc/kde2 ]; then
          if [ -d /etc/kde2/applnk ]; then
            mv /usr/share/applnk/* /etc/kde2/applnk/ >/dev/null 2>&1
            rm -rf /usr/share/applnk
          else
            mv /usr/share/applnk /etc/kde2/applnk >/dev/null 2>&1
          fi
        else
          mkdir /etc/kde2
          mv /usr/share/applnk /etc/kde2/applnk >/dev/null 2>&1
        fi
      fi
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#KDEHELPER#
#DEBHELPER#

exit 0


