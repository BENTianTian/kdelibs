#! /usr/bin/env python

Import('env')

env.subdirs('kconfig_compiler tests')
if env.has_key("CACHED_LIBART") and env['CACHED_LIBART']: env.subdirs('svgicons')

core_files="""
libintl.cpp kapplication.cpp kauthorized.cpp
kdebug.cpp kconfigbase.cpp kconfig.cpp  ksimpleconfig.cpp
kconfigbackend.cpp kmanagerselection.cpp kdesktopfile.cpp
